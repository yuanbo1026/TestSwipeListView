<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="80dp">
    <LinearLayout android:id="@+id/contentView" android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal" android:layout_gravity="center">
        <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:maxLines="2"
                android:textSize="15sp"
                android:text="132 Pages / 45 MB"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
    </LinearLayout>
    <ImageView android:id="@+id/download_button" android:layout_width="90dp"
               android:layout_height="match_parent" android:background="#F3F3F3"
               android:src="@drawable/ic_list_trash"/>
    <ImageView android:id="@+id/view_button" android:layout_width="90dp"
               android:layout_height="match_parent" android:background="#F5F5F5"
               android:src="@drawable/ic_list_view"/>


</LinearLayout>